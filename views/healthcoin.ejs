<!-- views/healthcoin.ejs -->
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="/favicon.ico">

        <!-- Bootstrap core CSS -->
        <link href="css/bootstrap.min.css" rel="stylesheet">
        <!-- Bootstrap theme -->
        <link href="css/bootstrap-theme.min.css" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="css/theme.css" rel="stylesheet">

        <title>Healthcoin App</title>
    </head>

    <body role="document">
    <div id='wrapper' data-bind='css: { toggled: $data.sidebarToggled }'>
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"> <a href="/"></a> </li>
                <li> <a href="#biomarkers"><div data-bind="css: { selected: $data.currentView() === 'biomarkers' }" class="sidebar-nav-button-content"><div class="glyphicon glyphicon-home" aria-hidden="true"><span class="sidebar-nav-button-content">Healthcoin</span></div></div></a> </li>
                <li> <a href="#send"><div data-bind="css: { selected: $data.currentView() === 'send' }" class="sidebar-nav-button-content"><div class="glyphicon glyphicon-send" aria-hidden="true"><span class="sidebar-nav-button-content">Send</span></div></div></a> </li>
                <li> <a href="#receive"><div data-bind="css: { selected: $data.currentView() === 'receive' }" class="sidebar-nav-button-content"><div class="glyphicon glyphicon-inbox" aria-hidden="true"><span class="sidebar-nav-button-content">Receive</span></div></div></a> </li>
                <li> <a href="#history"><div data-bind="css: { selected: $data.currentView() === 'history' }" class="sidebar-nav-button-content"><div class="glyphicon glyphicon-time" aria-hidden="true"><span class="sidebar-nav-button-content">History</span></div></div></a> </li>
                <li> <a href="#console"><div data-bind="css: { selected: $data.currentView() === 'console' }" class="sidebar-nav-button-content"><div class="glyphicon glyphicon-console" aria-hidden="true"><span class="sidebar-nav-button-content">Console</span></div></div></a> </li>
                <!-- ko if: walletStatus.isLocalWallet() -->
                    <!-- ko if: walletStatus.isUnlocked() === 'Yes' -->
                <li> <a href="#"><div data-bind="click:lockWallet" class="sidebar-nav-button-content"><div class="glyphicon glyphicon-eye-open" aria-hidden="true"><span class="sidebar-nav-button-content">Lock Wallet</span></div></div></a> </li>
                    <!-- /ko -->
                    <!-- ko if: walletStatus.isUnlocked() !== 'Yes' -->
                <li> <a href="#"><div data-bind="click:unlockWallet" class="sidebar-nav-button-content"><div class="glyphicon glyphicon-lock" aria-hidden="true"><span class="sidebar-nav-button-content">Unlock Wallet</span></div></div></a> </li>
                    <!-- /ko -->
                <!-- /ko -->

                <!-- off wallet links -->
                <li> <a href="/profile"><div class="sidebar-nav-button-content"><div class="glyphicon glyphicon-user" aria-hidden="true"><span class="sidebar-nav-button-content">Profile</span></div></div></a> </li>
                <li> <a href="/logout"><div class="sidebar-nav-button-content"><div class="glyphicon glyphicon-lock" aria-hidden="true"><span class="sidebar-nav-button-content">Logout</span></div></div></a> </li>

                <!-- ko if: walletStatus.isLocalWallet() -->
                <li> <span class="sidebar-nav-button-content"></span> </li>
                <li> Blocks: <span data-bind="text: walletStatus.blocks"></span> / <span data-bind="text:walletStatus.totalBlocks"></span></li>
                <li> Wallet Encrypted: <span data-bind="text: walletStatus.isEncrypted"></span></li>
                <li> Staking Enabled: <span data-bind="text: walletStatus.isEnabled"></span></li>
                <li> Currently Staking: <span data-bind="text: walletStatus.isStaking"></span></li>
                <!-- /ko -->
            </ul>
        </div>
        <div id='page-content-wrapper'>
        <div id='wallet-container'>
            <div class='top-content'>
                <div class='container'>
                    <div class="button-settings"><span data-bind="click: toggleSidebar" class="glyphicon glyphicon-menu-hamburger"></span></div>
                    <div class="button-refresh"><span data-bind="click: refresh" class="glyphicon glyphicon-refresh"></span></div>
                </div>
                <div class='wallet-stats container'>
                    <div class="row" data-bind="with: walletStatus">
                        <div class="col-sm-4 left text">Total: <span data-bind='text: totalFmt'></span> HCN</div>
                        <div class="col-sm-4 center text">Available: <span data-bind='text: availableFmt'></span> HCN</div>
                        <div class="col-sm-4 right text">Staking: <span data-bind='text: stakeFmt'></span> HCN</div>
                    </div>
                </div>
            </div>
            <div id="main" class="container" role="main">
                <!--ko template: currentView --> <!--/ko -->
            </div> <!-- /container -->
        </div> <!-- #walletcontainer -->
        </div>
    </div>
    <div data-bind="modal:showDialog"  id="defaultModal" class="modal" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <!--ko template: { name: $data.modalView, data:$data.modalViewModel } --><!-- /ko -->
            </div> 
        </div> 
    </div> 
    <!-- Modal -->
        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="js/lib/jquery-1.9.1.min.js"></script>
        <script src="js/lib/bootstrap.min.js"></script>
        <!-- script src="js/lib/docs.min.js"></script -->
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="js/lib/ie10-viewport-bug-workaround.js"></script>
        <script src="js/lib/sammy.js" type="text/javascript"></script>
        <script data-main="js/main" src="js/lib/require.debug.js"></script>
    </body>
</html>
